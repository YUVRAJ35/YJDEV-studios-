                                        <p className="text-[10px] font-bold text-red-600 uppercase tracking-widest italic animate-pulse">2.5 Standard ‚Ä¢ PREMIUM</p>
                                    </div>
                                    <div className="bg-zinc-900 border border-red-900/40 px-6 py-2 rounded-2xl text-center">
                                        <p className="text-[8px] font-black text-red-600 uppercase mb-1">Study Timer</p>
                                        <p className="text-2xl font-mono font-black text-white">{formatTime(studyTime)}</p>
                                    </div>
                                </div>
                                <div className="flex-1 overflow-y-auto p-6 space-y-4 bg-black/40 z-10 custom-scrollbar">
                                    {strictMessages.map((msg, idx) => (
                                        <div key={idx} className={`flex ${msg.role === 'user' ? 'justify-end' : 'justify-start'}`}>
                                            <div className={`max-w-[85%] p-6 rounded-3xl text-xs font-mono border ${msg.role === 'user' ? 'bg-white text-black border-white rounded-br-none' : 'bg-zinc-900 border-white/10 text-zinc-100 rounded-bl-none'}`}>
                                                {msg.version && <p className="text-[9px] font-black text-red-600 mb-3 border-b border-red-900/50 pb-1 uppercase">{msg.version}</p>}
                                                {msg.text}
                                            </div>
                                        </div>
                                    ))}
                                </div>
                                <div className="p-6 bg-black border-t border-white/5 z-10">
                                    <form onSubmit={(e) => handleSendMessage(e, true)} className="flex gap-4">
                                        <input value={inputValue} onChange={(e) => setInputValue(e.target.value)} placeholder="Analyze data..." className="flex-1 bg-zinc-900 border border-white/10 rounded-2xl px-6 py-4 text-white font-mono text-xs focus:outline-none focus:border-red-600 transition-all" />
                                        <button type="button" onClick={() => setIsStudying(!isStudying)} className={`px-8 rounded-2xl font-black text-[10px] uppercase transition-all ${isStudying ? 'bg-red-600 text-white' : 'bg-white text-black'}`}>
                                            {isStudying ? 'STOP' : 'START'}
