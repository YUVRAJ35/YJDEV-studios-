                        {currentPage === 'LABS' && (
                            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                {[{t:"Dark Mode", i:"üåô", d:"Midnight Studio Theme"}, {t:"Leaderboard", i:"üìä", d:"Track global study ranks"}, {t:"Voice Assistant", i:"üéôÔ∏è", d:"AI interaction via speech"}].map((l, i) => (
                                    <div key={i} className="bg-white p-8 rounded-[3rem] border border-slate-100 shadow-sm relative overflow-hidden group">
                                        <div className="text-4xl mb-4">{l.i}</div>
                                        <h4 className="font-black italic uppercase text-slate-800">{l.t}</h4>
                                        <p className="text-xs text-slate-500 font-medium">{l.d}</p>
                                        <div className="absolute top-4 right-4 bg-amber-100 text-amber-600 text-[8px] font-black px-2 py-1 rounded-full uppercase italic tracking-widest">Locked</div>
                                    </div>
                                ))}
                                <div className="bg-zinc-900 rounded-[3rem] p-8 flex flex-col items-center justify-center text-center text-white border border-white/5">
                                    <p className="text-[8px] font-black text-indigo-400 uppercase tracking-widest mb-2">v2.0 Preview</p>
                                    <h4 className="font-black italic uppercase">Request Core Access</h4>
                                </div>
                            </div>
                        )}
                    </main>

                    {/* FOOTER */}
                    <footer className="mt-8 mb-8 text-[9px] font-black text-slate-400 uppercase tracking-[0.4em] italic flex flex-wrap justify-center items-center gap-6 text-center">
                        <span className="premium-identity opacity-80">Yuvraj Singh Budhwar</span>
                        <div className="w-1.5 h-1.5 bg-indigo-200 rounded-full animate-pulse" />
                        <span>v1.9.5 Premium Stable</span>
                        <div className="w-1.5 h-1.5 bg-indigo-200 rounded-full animate-pulse" />
                        <span>Best Studys Winner</span>
                    </footer>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
