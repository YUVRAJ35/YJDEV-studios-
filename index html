                                    <input value={inputValue} onChange={(e) => setInputValue(e.target.value)} className="flex-1 bg-slate-100 rounded-2xl px-5 py-4 text-sm font-bold outline-none border-none focus:ring-2 focus:ring-indigo-100 transition-all" placeholder="Chat with AI, Yuvraj..." />
                                    <button className="bg-indigo-600 text-white p-4 rounded-2xl shadow-lg hover:scale-105 active:scale-95 transition-all">
                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="3"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>
                                    </button>
                                </form>
                            </div>
                        )}

                        {currentPage === 'TOPPERS' && (
