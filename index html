                                <span className="text-[8px] font-black text-slate-400 tracking-widest uppercase">Premium v1.9.5</span>
                            </div>
                        </div>
                        <div className="flex gap-1 overflow-x-auto no-scrollbar max-w-[50%] p-1 bg-slate-50 rounded-2xl">
                            {['HOME', 'AI', 'TOPPERS', 'HISTORY', 'LABS'].map(tab => (
                                <button 
                                    key={tab} 
                                    onClick={() => setCurrentPage(tab)} 
                                    className={`px-4 py-2 rounded-xl text-[9px] font-black transition-all whitespace-nowrap ${currentPage === tab ? 'bg-indigo-600 text-white shadow-md' : 'text-slate-400 hover:bg-white'}`}
                                >
                                    {tab === 'LABS' ? 'SOON' : tab}
                                </button>
                            ))}
                        </div>
                    </nav>

                    {/* MAIN CONTENT */}
                    <main className="w-full max-w-5xl flex-1 p-4 page-transition">
                        {currentPage === 'HOME' && (
                            <div className="space-y-6">
                                <div className="bg-gradient-to-br from-slate-900 via-indigo-950 to-black p-10 rounded-[3rem] text-white shadow-2xl relative overflow-hidden border border-white/5">
                                    <div className="absolute -right-10 -top-10 w-40 h-40 bg-indigo-500/20 blur-3xl rounded-full"></div>
                                    <div className="absolute top-6 right-8 bg-yellow-400 text-black text-[9px] font-black px-3 py-1 rounded-full animate-bounce shadow-lg">ELITE STATUS</div>
                                    <p className="text-indigo-400 font-black text-xs uppercase tracking-[0.3em] mb-2">Authenticated Session</p>
                                    <h1 className="text-4xl md:text-6xl font-black mb-4">
                                        <span className="premium-identity">Yuvraj Singh Budhwar</span>
                                    </h1>
                                    <p className="text-slate-300 font-medium max-w-md">Winner of "BEST STUDYS" Live Event. Accessing Gold-Tier student dashboard.</p>
                                    <div className="flex gap-4 mt-8">
                                        <button onClick={() => setCurrentPage('HISTORY')} className="bg-white text-black px-8 py-3 rounded-2xl font-black text-[10px] uppercase tracking-widest hover:scale-105 transition-transform">Timeline</button>
                                        <button onClick={() => setCurrentPage('TOPPERS')} className="bg-indigo-600/20 backdrop-blur-md text-white border border-white/10 px-8 py-3 rounded-2xl font-black text-[10px] uppercase tracking-widest hover:bg-indigo-600 transition-colors">Strict AI</button>
                                    </div>
                                </div>

                                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div className="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-sm">
                                        <p className="text-indigo-600 font-black text-[10px] uppercase mb-1">Last Exam Session</p>
                                        <h3 className="text-2xl font-black italic">25th DEC (Double)</h3>
                                        <div className="mt-4 flex gap-2">
                                            <span className="bg-slate-50 px-3 py-1 rounded-full text-[9px] font-bold border border-slate-100 italic">59/80</span>
                                            <span className="bg-slate-50 px-3 py-1 rounded-full text-[9px] font-bold border border-slate-100 italic">65/80</span>
                                        </div>
                                    </div>
                                    <div className="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-sm flex items-center justify-between">
                                        <div>
                                            <p className="text-amber-500 font-black text-[10px] uppercase mb-1">Premium Achievement</p>
                                            <h3 className="text-2xl font-black italic">BEST STUDYS</h3>
                                        </div>
                                        <div className="w-12 h-12 bg-yellow-400 rounded-full flex items-center justify-center text-2xl shadow-lg shadow-yellow-200">üèÜ</div>
                                    </div>
                                </div>
                            </div>
                        )}

                        {currentPage === 'HISTORY' && (
                            <div className="bg-white p-8 rounded-[3rem] border border-slate-100 shadow-sm h-full flex flex-col">
                                <h2 className="text-3xl font-black italic text-slate-800 uppercase mb-8 tracking-tighter">Official Datesheet</h2>
                                <div className="flex-1 overflow-y-auto custom-scrollbar space-y-3 pr-2">
                                    {examHistory.map((exam, i) => (
                                        <div key={i} className={`flex items-center justify-between p-5 rounded-2xl border transition-all ${exam.isEvent ? 'bg-gradient-to-r from-yellow-50 to-amber-50 border-yellow-200' : 'bg-slate-50/50 border-slate-100'}`}>
                                            <div className="flex items-center gap-6">
                                                <div className="text-center w-10">
                                                    <span className={`block text-xs font-black ${exam.isEvent ? 'text-amber-600' : 'text-slate-400'}`}>{exam.date.split('/')[0]}</span>
                                                    <span className="block text-[8px] font-bold text-slate-300">DEC</span>
                                                </div>
                                                <div>
                                                    <h4 className={`font-black text-sm uppercase italic ${exam.isEvent ? 'text-amber-700' : 'text-slate-800'}`}>{exam.name}</h4>
                                                    <p className={`text-[9px] font-black uppercase tracking-widest ${exam.isEvent ? 'text-amber-500' : 'text-indigo-400'}`}>{exam.status}</p>
                                                </div>
                                            </div>
                                            <div className="text-right">
                                                <span className={`font-black text-lg italic ${exam.isEvent ? 'text-amber-600' : 'text-slate-800'}`}>{exam.marks}</span>
                                            </div>
                                        </div>
                                    ))}
